                <!--  בחירת שם קינוח  -->
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Text="Dessert Name" />
                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    IsVisible="{Binding ShowDessertNameError}"
                    Style="{StaticResource labelErrorStyle}"
                    Text="{Binding DessertNameError}"
                    TextColor="Red" />
                <Entry
                    Grid.Row="2"
                    Grid.Column="1"
                    Placeholder="Type Dessert Name"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding DessertName}" />


                <Label
                    x:Name="dessertPrice_lbl"
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="15"
                    Text="Dessert Price" />

                <Entry
                    Grid.Row="3"
                    Grid.Column="1"
                    Placeholder="Enter your dessert price"
                    Text="{Binding DessertPrice}" />



                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="15"
                    Text="Choose your dessert type" />

                <StackLayout
                    Grid.Row="5"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Center"
                    Orientation="Horizontal">
                    <!--  RadioButton לעוגה !  -->
                    <RadioButton
                        Content="Cake"
                        GroupName="DessertType"
                        IsChecked="{Binding IsCakeChecked}" />

                    <!--  RadioButton לקאפקייק  -->
                    <RadioButton
                        Content="Cupcake"
                        GroupName="DessertType"
                        IsChecked="{Binding IsCupcakeChecked}" />

                    <!--  RadioButton לעוגייה  -->
                    <RadioButton
                        Content="Cookie"
                        GroupName="DessertType"
                        IsChecked="{Binding IsCookieChecked}" />
                    <!--  RadioButton למאפה  -->
                    <RadioButton
                        Content="pastry"
                        GroupName="DessertType"
                        IsChecked="{Binding IsPastryChecked}" />

                </StackLayout>
                <!--  כפתורי הוספה וביטול  -->
                <Button
                    Grid.Row="12"
                    Grid.Column="1"
                    Command="{Binding AddDessertCommand}"
                    IsEnabled="{Binding NotInServerCall}"
                    Style="{StaticResource buttonStyle}"
                    Text="Add Dessert" />
                
                <Button Text="Cancel" Command="{Binding CancelCommand}" IsEnabled="{Binding NotInServerCall}" Grid.Row="12" Grid.Column="0" Style="{StaticResource buttonStyle}"/>
                





            </Grid>


        </ScrollView>
    </VerticalStackLayout>
</ContentPage>