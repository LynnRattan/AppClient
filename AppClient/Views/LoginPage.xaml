<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:AppClient.ViewModels"
             x:Class="AppClient.Views.LoginPage"
             Title="Login"
             x:DataType="viewmodel:LoginPageViewModel">
   
    <VerticalStackLayout Padding="10" BackgroundColor="Pink">
        <Label
            HorizontalOptions="Center"
            Padding="5"
            FontAttributes="Bold"
            FontFamily="Consolas"
            FontSize="30"
            Text="Login"
            TextColor="Purple" />

        <Label FontFamily="Consolas" Text="Mail" />
        <Frame
            BackgroundColor="NavajoWhite"
            Margin="0,10,0,0"
            Padding="3"
            CornerRadius="10">
            <Entry
                x:Name="Mail"
                Margin="5,0,0,0"
                FontSize="18"
                Placeholder="Mail"
                Text="{Binding Mail}" />
        </Frame>
        <Label FontFamily="Consolas" Text="Password" />
        <Frame
            BackgroundColor="NavajoWhite"
            Margin="0,10,0,0"
            Padding="3"
            CornerRadius="10">
            <Entry
                x:Name="Password"
                Margin="5,0,0,0"
                FontSize="18"
                IsPassword="True"
                Placeholder="Password"
                Text="{Binding Password}" />
        </Frame>
        <Label Text="{Binding ErrorMsg}" TextColor="Red" HorizontalOptions="Center"></Label>
        <Button
            BackgroundColor="#b52cb5"
            x:Name="LoginButton"
            Margin="0,20,0,0"
            Command="{Binding LoginCommand}"
            HorizontalOptions="FillAndExpand"
            Text="Login"
            VerticalOptions="CenterAndExpand" />

        <StackLayout Margin="0,20,0,0" HorizontalOptions="Center">
            <Label Text="Don't have an account yet?" />
            <Label
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Text="Sign up here"
                TextColor="Blue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToSignUpCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
        <ActivityIndicator IsRunning="{Binding InServerCall}" Color="Red"></ActivityIndicator>


    </VerticalStackLayout>
</ContentPage>