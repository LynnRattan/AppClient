<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:AppClient.ViewModels"
             x:Class="AppClient.Views.ConProfilePage"
             Title="ConProfilePage"
             x:DataType="viewmodel:ConProfilePageViewModel">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Add Dessert" VerticalOptions="Center" HorizontalOptions="Center" Command="{Binding GoToAddDessertCommand}" IsEnabled="{Binding NotInServerCall}"/>

    </VerticalStackLayout>
</ContentPage>