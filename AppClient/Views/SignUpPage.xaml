<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppClient.Views.SignUpPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:AppClient.ViewModels"
    Title="Sign Up"
    x:DataType="viewmodel:SignUpPageViewModel"
    FlowDirection="LeftToRight">
    <StackLayout
        BackgroundColor="LightPink"
        Shell.BackgroundColor="LightPink"
        VerticalOptions="FillAndExpand">



        <ScrollView
            HorizontalScrollBarVisibility="Always"
            VerticalOptions="FillAndExpand"
            VerticalScrollBarVisibility="Always">

            <Grid ColumnDefinitions="*,1.5*" RowDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*,*,*">


                <!--  תמונת פרופיל  -->

                <Frame
                    Grid.ColumnSpan="2"
                    Margin="10"
                    Padding="5"
                    BorderColor="Black"
                    HorizontalOptions="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image
                            x:Name="theImageBug"
                            HeightRequest="150"
                            Source="{Binding PhotoURL}" />
                        <Label
                            Grid.Row="1"
                            HorizontalOptions="Center"
                            Text="Click Here To Upload Photo!"
                            TextColor="Blue"
                            VerticalOptions="End">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UploadPhotoCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Frame>




                <!--  בחירת שם עמוד פרופיל  -->
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Style="{StaticResource labelProfileNameStyle}"
                    Text="Profile Name" />
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    IsVisible="{Binding ShowProfileNameError}"
                    Style="{StaticResource labelErrorStyle}"
                    Text="{Binding ProfileNameError}"
                    TextColor="Red" />
                <Entry
                    Grid.Row="1"
                    Grid.Column="1"
                    Placeholder="Type Profile Name"
                    PlaceholderColor="#e339d2"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding ProfileName}" />

                <!--  בחירת שם משתמש  -->
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Style="{StaticResource labelUsernameStyle}"
                    Text="Username" />
                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    IsVisible="{Binding ShowUsernameError}"
                    Style="{StaticResource labelErrorStyle}"
                    Text="{Binding UsernameError}"
                    TextColor="Red" />
                <Entry
                    Grid.Row="2"
                    Grid.Column="1"
                    Placeholder="Type Username"
                    PlaceholderColor="#e339d2"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding Username}" />



                <!--  בחירת מייל  -->
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Style="{StaticResource labelMailStyle}"
                    Text="Mail" />
                <Label
                    Grid.Row="3"
                    Grid.Column="1"
                    IsVisible="{Binding ShowMailError}"
                    Style="{StaticResource labelErrorStyle}"
                    Text="{Binding MailError}"
                    TextColor="Red" />
                <Entry
                    Grid.Row="3"
                    Grid.Column="1"
                    Placeholder="Type Mail"
                    PlaceholderColor="#e339d2"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding Mail}" />

                <!--  בחירת סיסמה  -->
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Style="{StaticResource labelNameStyle}"
                    Text="Password" />
                <Label
                    Grid.Row="4"
                    Grid.Column="1"
                    IsVisible="{Binding ShowPasswordError}"
                    Style="{StaticResource labelErrorStyle}"
                    Text="{Binding PasswordError}"
                    TextColor="Red" />
                <Entry
                    Grid.Row="4"
                    Grid.Column="1"
                    Placeholder="Type Password"
                    PlaceholderColor="#e339d2"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding Password}" />




                <!--  בחירת סוג משתמש  -->
                <Label
                    Grid.Row="7"
                    Margin="15"
                    Text="Choose your user Type:" />

                <StackLayout
                    Grid.Row="8"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Center"
                    Orientation="Horizontal">
                    <!--  RadioButton לקונדיטור  -->
                    <RadioButton
                        Content="Confectioner"
                        GroupName="UserType"
                        IsChecked="{Binding IsConChecked}" />

                    <!--  RadioButton לקונה  -->
                    <RadioButton
                        Content="regular user"
                        GroupName="UserType"
                        IsChecked="True" />
                </StackLayout>

                <!--  בחירת שם קודנטוריה  -->
                <Label
                    Grid.Row="9"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    IsVisible="{Binding IsConChecked}"
                    Text="Confectionery Name" />
                <Label
                    Grid.Row="9"
                    Grid.Column="1"
                    IsVisible="{Binding ShowConfectioneryNameError}"
                    Style="{StaticResource labelErrorStyle}"
                    Text="{Binding ConfectioneryNameError}"
                    TextColor="Red" />
                <Entry
                    Grid.Row="9"
                    Grid.Column="1"
                    IsVisible="{Binding IsConChecked}"
                    Placeholder="Type Confectionery Name"
                    PlaceholderColor="#e339d2"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding ConfectioneryName}" />

                <Label
                    x:Name="highestPrice_lbl"
                    Grid.Row="10"
                    Grid.Column="0"
                    Margin="15"
                    IsVisible="{Binding IsConChecked}"
                    Text="Highest Price" />
                <Label
                    Grid.Row="10"
                    Grid.Column="1"
                    IsVisible="{Binding ShowHighestPriceError}"
                    Style="{StaticResource labelErrorStyle}"
                    Text="{Binding HighestPriceError}"
                    TextColor="Red" />
                <Entry
                    Grid.Row="10"
                    Grid.Column="1"
                    IsVisible="{Binding IsConChecked}"
                    Keyboard="Numeric"
                    Placeholder="Enter your highest price"
                    PlaceholderColor="#e339d2"
                    Text="{Binding HighestPrice}" />



                <Label
                    Grid.Row="11"
                    Grid.Column="0"
                    Margin="15"
                    IsVisible="{Binding IsConChecked}"
                    Text="Choose your confectionery type" />

                <StackLayout
                    Grid.Row="12"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Center"
                    IsVisible="{Binding IsConChecked}"
                    Orientation="Horizontal">
                    <!--  RadioButton למאפייה  -->
                    <RadioButton
                        Content="Bakery"
                        GroupName="ConType"
                        IsChecked="{Binding IsBakeryChecked}" />

                    <!--  RadioButton לפטיסרי  -->
                    <RadioButton
                        Content="Patisserie"
                        GroupName="ConType"
                        IsChecked="{Binding IsPatisserieChecked}" />

                    <!--  RadioButton לביתית  -->
                    <RadioButton
                        Content="Homemade"
                        GroupName="ConType"
                        IsChecked="{Binding IsHomemadeChecked}" />

                    <!--  RadioButton להכל  -->
                    <RadioButton
                        Content="Everything"
                        GroupName="ConType"
                        IsChecked="True" />
                </StackLayout>

                <!--  כפתורי הרשמה וביטול  -->
                <Button
                    BackgroundColor="#b54cb5"
                    Grid.Row="13"
                    Grid.Column="1"
                    Command="{Binding SignUpCommand}"
                    IsEnabled="{Binding NotInServerCall}"
                    Style="{StaticResource buttonStyle}"
                    Text="Sign Up" />
                <Button
                    BackgroundColor="#b54cb5"
                    Grid.Row="13"
                    Grid.Column="0"
                    Command="{Binding CancelCommand}"
                    IsEnabled="{Binding NotInServerCall}"
                    Style="{StaticResource buttonStyle}"
                    Text="Cancel" />




            </Grid>

        </ScrollView>
    </StackLayout>

</ContentPage>