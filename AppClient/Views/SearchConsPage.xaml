<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppClient.Views.SearchConsPage"
             xmlns:Models="clr-namespace:AppClient.Models"
             xmlns:viewmodel="clr-namespace:AppClient.ViewModels"
             x:DataType="viewmodel:SearchConsPageViewModel"
             Title="SearchConsPage">
    <RefreshView Command="{Binding LoadConfectioneriesCommand}" IsRefreshing="{Binding IsRefreshing}">
        <ScrollView x:Name="scrlview" Margin="10">


            <Grid ColumnDefinitions="3*,2*" RowDefinitions="1*,1*,1*,1*,10*">
                <Label HorizontalOptions="Center" Grid.Row="0" Text="Search by Confectionery Name:" Grid.Column="0" />
                <SearchBar HorizontalOptions="Center" Text="{Binding ConfectioneryName}" />
                <Label HorizontalOptions="Center" Grid.Row="1" Text="Price Range:  0-" Grid.Column="0" />
                <SearchBar Grid.Row="1" HorizontalOptions="Center" Text="{Binding HighestPrice}" />
                <Picker
     x:DataType="Models:ConfectioneryType"
     Grid.Row="2"
     Grid.Column="0"
     Title="Choose a Confectionery Type"
     ItemsSource="{Binding ConfectioneryTypes , Source={x:Reference scrlview}}"
     ItemDisplayBinding="{Binding ConfectioneryTypeName}"
     SelectedItem="{Binding BindingContext.SelectedConfectioneryType , Source={x:Reference scrlview}}"/>
                <Picker
     x:DataType="Models:DessertType"
     Grid.Row="3"
     Grid.Column="0"
     Title="Choose a Dessert Type"
     ItemsSource="{Binding DessertTypes , Source={x:Reference scrlview}}"
     ItemDisplayBinding="{Binding DessertTypeName}"
     SelectedItem="{Binding BindingContext.SelectedDessertType , Source={x:Reference scrlview}}"/>
               
                <Button
     Grid.Row="4"
     Grid.Column="1"
     Margin="10"
     BackgroundColor="White"
     BorderColor="Black"
     BorderWidth="3"
     Command="{Binding FilterCommand}"
     Text="Search"
     TextColor="Black" />



                <CollectionView
                x:Name="collection"
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="3"
                ItemsSource="{Binding FoundConfectioneries}"
                SelectedItem="{Binding SelectedFoundConfectionery}"
                SelectionMode="Single">

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="Models:Baker">
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItem
                                    Command="{Binding Source={x:Reference collection}, Path=BindingContext.ViewConfectioneryCommand}"
                                    CommandParameter="{Binding .}"
                                    Text="View" />
                                </SwipeView.RightItems>
                                <Border
                                Margin="4,5"
                                Padding="4"
                                HeightRequest="200">
                                    <Grid RowDefinitions="*,*,*,*">
                                        <Label Grid.Row="0" Margin="3" FontSize="Title">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span FontAttributes="Bold" Text="Confectionery name: " />
                                                    <Span Text="{Binding ConfectioneryName}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>

                                        <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*,*">
                                            <Image
                                             Grid.RowSpan="4"
                                             Grid.Column="2"
                                             Source="{Binding FullImageURL}" />
                                            </Grid>

                                            <Label Grid.Row="2" Margin="3">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span FontAttributes="Bold" Text="Confectionery Type: " />
                                                    <Span Text="{Binding ConfectioneryTypeName}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>



                                        <Label Grid.Row="3" Margin="3">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span FontAttributes="Bold" Text="Price range: " />
                                                    <Span Text="0-" />
                                                    <Span Text="{Binding HighestPrice}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>

                                    </Grid>
                                </Border>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <StackLayout>
                            <Label HorizontalOptions="CenterAndExpand" Text="No confectioneries found." />
                            <Image
                            Aspect="AspectFit"
                            HeightRequest="80"
                            HorizontalOptions="CenterAndExpand"
                            Source="sad.png"
                            WidthRequest="80" />
                        </StackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>


            </Grid>
        </ScrollView>
    </RefreshView>
</ContentPage>
