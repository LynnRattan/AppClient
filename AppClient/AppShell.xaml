<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppClient"
    xmlns:Views="clr-namespace:AppClient.Views"
    xmlns:ViewModel="clr-namespace:AppClient.ViewModels"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutIcon="hamburger"
    Title="AppClient">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" Route="tabs">
      <Tab>
      <ShellContent
        Title="Logout"
        ContentTemplate="{DataTemplate Views:LoginPage}"
        Route="Login" />
      </Tab>
    </FlyoutItem>
    <MenuItem Text="Logout" Command="{Binding LogoutCommand}" />
</Shell>
